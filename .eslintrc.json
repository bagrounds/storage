{
  "env": {
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-extra-semi": 0,
    "valid-jsdoc": [
      2,
      {
        "requireReturn": false,
        "requireReturnType": false
      }
    ]

  }
}